        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:WorkManagementApp" 
        mc:Ignorable="d" Title="作業管理アプリ" Height="389" Width="500">

    <Grid x:Name="LayoutRoot" Margin="0,0,0,-1" RenderTransformOrigin="0.539,0.597" Height="359" VerticalAlignment="Top">
        <Image x:Name="ImageColor" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="324,265,10,10" />
        <Button x:Name="btnState" Content="ステータス詳細" HorizontalAlignment="Left" Height="30" Margin="324,74,0,0" VerticalAlignment="Top" Width="140" Click="State_open_Click"/>
